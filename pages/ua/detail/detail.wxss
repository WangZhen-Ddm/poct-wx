/* pages/ua/detail/detail.wxss */
.gap {
    height: 20rpx;
    margin-top: 10rpx;
    width: 80%;
    margin-left: 10%;
    background-color: gray;
  }
  
  .test {
    text-align: center;
    color: #3399FF;
    text-decoration-line: underline;
  }
  
  .input {
    width: 100%;
    height: 82rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    color: #333;
  }
  
  input-holder {
    color: #666;
    font-size: 28rpx;
  }
  
  .risk {
    margin-top: 40rpx;
    text-align: center;
  }

  .advice-title {
    font-size: 20px;
    text-align: center;
    width: 20%;
    margin-left: 40%;
    margin-top: 10px;
    background-color: #B2DEF7;
    border-radius: 12px;
  }
  
  .advice {
    margin-top: 5px;
    width: 86%;
    margin-left: 7%;
    border: 4px solid gainsboro;
    border-radius: 20px;
  }
  
  .tip {
    margin: 8px;
    font-size: 14px;
    border: 2px solid gainsboro;
    border-radius: 10px;
    box-shadow:0 2rpx 3rpx 1rpx #4e4e4e99;
  }
  
  .content {
    text-indent: 60rpx;
    padding: 10rpx;
  }

  .dm-value {
    margin-top: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;

}

.value {
    width: 100rpx;
    border-bottom: 1px solid black;
    margin-right: 10rpx;
    margin-left: 40rpx;
    text-align: center;
    font-size: 50rpx;
}

.add {
    display: flex;
    flex-direction: column;
}

.add>image {
    height: 60rpx;
    width: 60rpx;
}

.time {
    width: 80%;
    margin-left: 10%;
    border: 2px solid gray;
    border-radius: 20rpx;
    display: flex;
    justify-content: center;
    text-align: center;
    font-size: 20px;
    font-weight: bold;
    margin-top: 100rpx;
}

.doctor-body {
    height: 130rpx;
  }