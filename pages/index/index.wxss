/**index.wxss**/
.container {
  align-items: center;
}

.container > image {
  width: 100px;
  height: 100px;
  margin-top: 100px;
  margin-bottom: 50px;
}

.icon {
  height: 20px;
  width: 20px;
  margin-left: 15px;
  margin-right: 15px;
}

.function {
  font-size: 30rpx;
  color: #1396DB;
  height: 60px;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.login-content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.login {
  width: 80%;
  height: 40px;
  display: flex;
  align-items: center;
  margin-bottom: 10px;
  border-bottom: 1px solid #ccc;
  /* padding: 10px 15px;
  position: relative;
  /* border-bottom: 1px solid silver; */
}
.login > view:first-child{
  width: 23%;
  line-height: 35px;
  font-size: 18px;
  padding-left: 8px;
  border-right: 1px solid #ccc
}
.login > view:nth-child(2) {
  width: 65%;
  padding-left: 8px;
}

.login-button {
  margin-top: 68px;
  width: 295px!important;
  height: 40px;
  border-radius: 30px;
  background-color: #0479FF;
  box-shadow:0px 3px 5px 1px #ccc;
  color: white;
}

.inform {
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #0479FF;
}