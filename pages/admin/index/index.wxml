<!--pages/admin/index/index.wxml-->
<view class='container'>
    <view class="title">管理员登录</view>
    <view class="subtitle">管理员登录，普通用户请勿操作</view>
  <view class="login-content">
    <view class="login">
      <image mode="aspectFit" src="../../../images/username.png" class="icon" />
      <view>
        <input class='weui-input' type="text" bindinput="usernameInput" value="{{username}}" cursor-spacing="30rpx" placeholder="请输入管理员账号"/>
      </view>
    </view>
    <view class="login">
      <image mode="aspectFit" src="../../../images/password.png" class="icon" />
      <view class="login-password">
        <input class='weui-input' type="text" bindinput="passwordInput" value="{{password}}" cursor-spacing="30rpx" placeholder="请输入密码"/>
      </view>
    </view>
      <button class="login-button" bindtap="logIn">登录</button>
  </view>
</view>
