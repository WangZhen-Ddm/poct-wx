            <view style="margin-right: 10px;">{{userinfo.age}}</view>
            <image mode="aspectFit" src="../../images/right.png" style="height:24rpx;width:16rpx;" />
        </view>
    </view>
    <view class="item">
        <view class="item-left">
            <image src="../../images/ID.jpg" class="img" />
            <view style="margin-left: 10px;">患者ID号码</view>
        </view>
        <view class="item-left">
            <view style="margin-right: 10px;">{{userinfo.patientID||"未填写"}}</view>
            <image mode="aspectFit" src="../../images/right.png" style="height:24rpx;width:16rpx;" />
        </view>
    </view>
    <view class="item">
        <view class="item-left">
            <image src="../../images/height.jpg" class="img" />
