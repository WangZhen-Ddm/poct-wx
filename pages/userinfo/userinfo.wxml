<!--pages/userinfo/userinfo.wxml-->
<view class="container">
    <view class="title">患者基本信息</view>
    <view class="item" style="margin-top: 20px;">
        <view class="item-left">
            <image src="../../images/name.jpg" class="img" />
            <view style="margin-left: 10px;">姓名</view>
        </view>
        <view class="item-left">
            <view style="margin-right: 10px;">{{userinfo.name||"未填写"}}</view>
            <image mode="aspectFit" src="../../images/right.png" style="height:24rpx;width:16rpx;" />
        </view>
    </view>
    <view class="item">
        <view class="item-left">
            <image src="../../images/sex.jpg" class="img" />
            <view style="margin-left: 10px;">性别</view>
        </view>
        <view class="item-left">
