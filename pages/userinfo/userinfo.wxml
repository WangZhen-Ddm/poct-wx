            <image src="../../images/binfazheng.jpg" class="img" />
            <view style="margin-left: 10px;">并发症</view>
        </view>
        <view class="item-left">
            <view style="margin-right: 10px;">{{userinfo.illnessHistory||"未填写"}}</view>
            <image mode="aspectFit" src="../../images/right.png" style="height:24rpx;width:16rpx;" />
