/* pages/dm/input/input.wxss */
.input {
    margin-top: 200rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;

}

.dm-input {
    height: 300rpx;
    width: 300rpx;
}

.value {
    width: 100rpx;
    border-bottom: 1px solid black;
    margin-right: 10rpx;
    margin-left: 40rpx;
    text-align: center;
}

.add {
    display: flex;
    flex-direction: column;
}

.add>image {
    height: 60rpx;
    width: 60rpx;
}

.time {
    width: 80%;
    margin-left: 10%;
    border: 2px solid gray;
    border-radius: 20rpx;
    display: flex;
    justify-content: center;
    text-align: center;
    font-size: 20px;
    font-weight: bold;
    margin-top: 100rpx;
}

.save {
    margin-top: 100rpx;
}